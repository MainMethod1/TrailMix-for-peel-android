<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackerFragment"
    android:name="com.mainmethod.trailmix1.TrackerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/trackerMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:elevation="2dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/timer"
             android:layout_alignParentLeft="true"
        
            android:text="0.0 km/h"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/timer"
           
            android:layout_alignParentRight="true"
           
            android:text="0.0m"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            
            android:text="00:00"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="25sp" />
       
    </RelativeLayout>

    <ImageButton
        android:id="@+id/fab_playPauseBtn"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="20dp"
        
        android:src="@drawable/btn_play_pause" 
        android:elevation="4dp"
android:stateListAnimator="@anim/anim"
android:background="@drawable/ripple"/>

    <ImageButton
        android:id="@+id/fab_stopBtn"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignTop="@+id/fab_playPauseBtn"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/fab_playPauseBtn"
        
        android:src="@drawable/btn_stop" 
        android:elevation="4dp"
android:stateListAnimator="@anim/anim"
android:background="@drawable/ripple"/>

</RelativeLayout>