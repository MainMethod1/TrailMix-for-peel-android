<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackerFragment"
    android:name="com.mainmethod.trailmix1.TrackerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/trackerMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#03a9f4"
        android:elevation="2dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:text="0.0m/s"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:textSize="22sp" />

            <ImageButton
                android:id="@+id/fab_stopBtn"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:background="@drawable/ripple"
                android:elevation="2dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/btn_stop"
         
                android:stateListAnimator="@anim/anim" />

            <TextView
                android:id="@+id/txt_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:text="0.0m"
                android:textColor="@color/wallet_bright_foreground_holo_dark"
                android:textSize="22sp" />
   
    </LinearLayout>

    <ImageButton
        android:id="@+id/fab_playPauseBtn"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="26dp"
        android:background="@drawable/ripple"
        android:elevation="4dp"
        android:src="@drawable/btn_play_pause"
        android:stateListAnimator="@anim/anim" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fab_playPauseBtn"
        android:layout_marginRight="14dp"
        android:text="00:00"
        android:textColor="@color/wallet_bright_foreground_holo_light"
        android:textSize="22sp" />

</RelativeLayout>